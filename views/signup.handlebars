<h2>Sign Up</h2>

<form class="form signup-form">
  <div class="form-group">
    <label for="user-signup">Username:</label>
    <input class="form-input" type="text" id="user-signup" />
  </div>
  <div class="form-group">
    <label for="password-signup">Password:</label>
    <input class="form-input" type="password" id="password-signup" />
  </div>
  <div class="form-group">
    <button class="btn signup-btn btn-primary" type="submit">Sign Up</button>
    <button class="btn btn-primary" type="submit"><a href="/login">Go to log in</a></button>
  </div>
</form>

<script src="/js/signup.js"></script>