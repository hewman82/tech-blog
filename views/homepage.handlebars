{{#if posts}}
{{#each posts as |post| }}
<a href="/post/{{post.id}}">
    <div class="row align-center mb-5">
        <div class="col-md-6">
            <h2>{{post.title}}</h2>
        </div>
        <div class="col-md-6">
            <h3>{{post.created_on}}</h3>
        </div>
    </div>
</a>
{{/each}}
{{else}}
    <div class="row align-center mb-5">
        <h2>No posts yet! <span class="get-started"><a href="/dashboard">Get started here</a></span></h2>
    </div>
{{/if}}