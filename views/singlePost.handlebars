<div class="row align-center mb-5">
    <div class="single col-md-12">
        <h2 class="text-center">{{title}}</h2>
        <p class="post-content">{{post}}</p>
        <p class="post-info">Posted by {{creator}} on {{created_on}}</p>
    </div>
</div>

{{#if comments}}
<div class="row align-center mb-5">
    {{#each comments as |comment|}}
    <div class="comments col-md-12">
        <h3>{{comment.content}}</h3>
        <p>Posted by {{comment.creator}} on {{comment.created_on}}</p>
    </div>
    {{/each}}
</div>
{{/if}}

<div>
    <form class="form comment-form">
        <div class="form-group">
            <input class="form-input" type="text" id="comment-input" placeholder="Add a comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>