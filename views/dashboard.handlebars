<h2>New Post</h2>

<form class="form post-form">
  <div class="form-group">
    <label for="post-title">Title:</label>
    <input class="form-input" type="text" id="post-title" />
  </div>
  <div class="form-group">
    <label for="post-post">Post:</label>
    <input class="form-input" type="text" id="post-post" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

<br>

{{#if posts}}
{{#each posts as |post| }}
<a href="/api/posts/{{post.id}}">
    <div class="row align-center mb-5">
        <div class="col-md-6">
            <h2>{{post.title}}</h2>
            <p>{{post.post}}</p>
        </div>
        <div class="col-md-6">
            <p>{{post.created_on}}</p>
        </div>
    </div>
</a>
{{/each}}
{{/if}}

<script src="/js/addPost.js"></script>